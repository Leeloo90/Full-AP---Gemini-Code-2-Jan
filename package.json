{
  "name": "story-graph",
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "description": "Specialized NLE for narrative film using fractal node topology.",
  "author": "Story Graph Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run build-electron",
    "build-electron": "tsc -p tsconfig.electron.json && cp preload.js dist-electron/",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && VITE_DEV_SERVER_URL=http://localhost:3000 electron .\"",
    "package": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.storygraph.app",
    "productName": "Story Graph",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.video-editor",
      "target": ["dmg", "zip"],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Video"
    },
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": ["**/*"]
      }
    ]
  },
  "dependencies": {
    "@xyflow/react": "^12.10.0",
    "lucide-react": "^0.462.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "wait-on": "^8.0.1"
  }
}